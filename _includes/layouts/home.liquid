---
layout: layouts/default.liquid
---
  <header>
    <div class="pt-16 pb-2 my-3 border-b">
      {%- include nav.html -%}
      <h1 class="text-4xl font-bold">Welcome to <a class="text-red-500 hover:underline" href="#">Pretty Static</a></h1>
      {% if subtitle %}
      <p class="font-light">{{ subtitle }}</p>    
      {% endif %}
    </div>
  </header>  

    <main>
      {%- for post in collections.posts -%}
      {%- if forloop.index < 4 -%}
      <div class="flex flex-col py-4">
        {%- if forloop.index == 1 -%}
        <p class="text-3xl font-bold font-underline py-2">Latest</p>
        {%- endif -%}
        <a href="{{ post.url | relative_url }}">
          <h4 class="text-xs font-medium">{{ post.data.date | date: "%d %B %Y" }}</h4>
          <h2 class="text-xl font-bold hover:underline">{{ post.data.title }}</h2>
        </a>
      </div>
      {%- endif -%}
      {%- endfor -%}

      {% include subscribe.html %}

      {%- for post in collections.posts -%}
      {%- if forloop.index >= 4 -%}
      <div class="flex flex-col py-4">
        {%- if forloop.index == 4 -%}
        <p class="text-3xl font-bold font-underline py-2">Articles</p>
        {%- endif -%}
        <a href="{{ post.url | relative_url }}">
          <h4 class="text-xs font-medium">{{ post.data.date | date: "%d %B %Y" }}</h4>
          <h2 class="text-xl font-bold hover:underline">{{ post.data.title }}</h2>
        </a>
      </div>
      {%- endif -%}
      {%- endfor -%}
    </main>
