---
layout: layouts/default.liquid
---
  <header>
    <div class="pt-16 pb-2 my-3 border-b">
      {%- include nav.html -%}
      <h1 class="text-4xl font-bold">Welcome to <a class="text-red-500 hover:underline" href="#">Pretty Static</a></h1>
      {% if subtitle %}
      <p class="font-light">{{ subtitle }}</p>    
      {% endif %}
    </div>
  </header>  

    <main>
      {%- for post in collections.posts reversed -%}
      {%- if forloop.index < 4 -%}
      <div class="py-4">
        {%- if forloop.index == 1 -%}
        <p class="font-semibold">Latest from the blog</p>
        {%- endif -%}
        <h2 class="text-xl font-bold text-red-500 hover:underline"><a href="{{ post.url | relative_url }}">{{ post.data.title }}</a></h2>
        <h3 class="font-light text-sm text-gray-700">{{ post.data.excerpt }}</h3>
        <h4 class="text-xs font-light italic py-1">{{ post.data.date | date: "%d %B %Y" }} by {{ post.data.author }}</h4>
      </div>
      {%- endif -%}
      {%- endfor -%}
      <div class="py-4">
        <p class="font-semibold hover:underline"><a href="/blog">More articles...</a></p>
      </div>

      {% include subscribe.html %}
    </main>
